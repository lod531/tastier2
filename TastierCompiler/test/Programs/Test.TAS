// This is a test program which can be compiled by the TastierCompiler.
// It reads a sequence of numbers from the input file and computes, for each
// number, the sum of all integers up to that number

program Test {
	Const
	{
		int const0 := 99;
		int const1 := 2;
	}

  int globalTest;

	void testAssignment()
	{
		int a;
		int b;
		a := 32;
		b := 64;
		write a;
		write b;
		globalTest := 128;
		write globalTest;
	}

	void testBooleanOps()
	{
		//expected output: 0 2 3 5 6 7 9
		int a;
		int b;

		a := 0;
		b := 0;
		if(a = b)
		{
			//should write
			write 0;
		}
		
		b := 1;
		if(a = b)
		{
			//should not write
			write 1;
		}
		
		a := 0;
		b := 1;
		if(a <= b)
		{
			//should write
			write 2;
		}
		a := 1;
		b := 1;
		if(a <= b)
		{
			//should write
			write 3;
		}
		a := 2;
		b := 1;
		if(a <= b)
		{
			//should not write
			write 4;
		}

		a := 0;
		b := -1;
		if(a >= b)
		{
			//should write
			write 5;
		}
		a := 0;
		b := 0;
		if(a >= b)
		{
			//should write
			write 6;
		}
		a := 1;
		b := 0;
		if(a >= b)
		{
			//should write
			write 7;
		}

		a := 0;
		b := 0;
		if(a != b)
		{
			//should not write
			write 8;
		}
		a := 0;
		b := 1;
		if(a != b)
		{
			//should write
			write 9;
		}
	}

	void testConst()
	{
		//expected output:101 
		int a;
		a := const0 + const1;
		write a;
		//pretty impoverished test, I know.
	}

	void testForLoop()
	{
		//expected output : 0..9
		int a;
		a := 0;
		for(; a := a + 1; a < 10)
		do
		{
			write a;
		}
	}
	void testArrays()
	{
		//expected output: 0..11 (3*2*2)
		int i;
		int j;
		int k;

		int zerothDim;
		int firstDim;
		int secondDim;

		zerothDim := 2;
		firstDim := 2;
		secondDim := 3;

		array int testArray[3][2][2];
		for(k := 0; k := k + 1; k < secondDim)
		do
		{
			for(j := 0; j := j + 1; j < firstDim)
			do
			{
				for(i := 0; i := i + 1; i < zerothDim)
				do
				{
					testArray[k][j][i] := k * firstDim * zerothDim + j * firstDim + i;
				}
			}
		}

		for(k := 0; k := k + 1; k < secondDim)
		do
		{
			for(j := 0; j := j + 1; j < firstDim)
			do
			{
				for(i := 0; i := i + 1; i < zerothDim)
				do
				{
					 write testArray[k][j][i];
				}
			}
		}
	}

	void testConditionals()
	{
		//expected output: 50
		int a;
		int b;
		b := 43;
		a := b = 42 ? 45 : 50 ;
		write a;
	}	

	void testSwitch()
	{
		//expected output: 0 1 2 9999 
		int a;
		for(a := 0; a := a + 1; a < 4)
		do
		{
			switch(a)
			{
				case 0 :
				write 0;
				break;

				case 1 :
				write 1;
				break;

				case 2 :
				write 2;
				break;

				default:
				write 9999;
			}
		}
	}

  void Main() {
	  testAssignment();
	  testBooleanOps();
	  testConst();
	  testForLoop();
	  testArrays();
	  testConditionals();
	  testSwitch();
  }
}

